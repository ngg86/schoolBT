@model BonTemps.Models.ViewModels.ReserveringViewModel

<h2>Add Gerecht</h2>

@using (Html.BeginForm("MenuToReservering", "Reserverings", FormMethod.Post))
{
    <div class="form-horizontal">
        @Model.Reservering.Datum.Date
        <br />
        @Model.Reservering.StartTijd.Value.TimeOfDay
        <br />
        @Model.Reservering.EindTijd.Value.TimeOfDay
        <br />
        <div class="form-group">
            <h4>Reservering</h4>
            <div id="selectedMenu">
                @Html.DropDownListFor(model => model.Menu.Id, new SelectList(Model.Menus, "Id", "Naam"))
                @Html.TextBoxFor(model => model.Total, new { @type = "number" })
                @{ if (!(string.IsNullOrEmpty(ViewBag.ErrorMessage)))
                    {
                        <p>@ViewBag.ErrorMessage</p>

                    }
                }
            </div>
        </div>
    </div>


    <div hidden="hidden">
        @Html.EditorForModel()
        @Html.EditorFor(model => model.Reservering)
        @Html.EditorFor(model => model.Menus))
        @Html.EditorFor(model => model.Reservering.Id)
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" />
        </div>
    </div>
}                                  