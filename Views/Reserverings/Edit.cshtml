@model BonTemps.Models.ViewModels.ReserveringViewModel

@{
    ViewBag.Title = "Wijzig";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Reservering op @Model.Reservering.Datum.Day-@Model.Reservering.Datum.Month-@Model.Reservering.Datum.Year <br />
        @Model.Reservering.StartTijd.Value.TimeOfDay.Hours:00 tot @Model.Reservering.EindTijd.Value.TimeOfDay.Hours:00</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div hidden>
            @Html.EditorFor(model => model.ReserveringID)
        </div>

        @*<div class=form-group style="display:none">@Html.EditorFor(model => model.Reservering.Id)    </div>*@


        <div class="form-group">
            @Html.LabelFor(model => model.Reservering.Datum, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SelectedDate, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SelectedDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedHour, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SelectedHour, ":00", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SelectedHour, "", new { @class = "text-danger", @type = "time" })
            </div>
        </div>
        
        <input type="hidden">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default">
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Terug naar list", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
